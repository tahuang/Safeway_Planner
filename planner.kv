#:kivy 1.10.0

<Planner>:    
    canvas:
    	Color:
    		rgba: 0.8, 0.8, 0.8, 1
    	Rectangle:
    		pos: self.pos
    		size: self.size

    orientation: 'vertical'
    BoxLayout:
        size_hint: 1, .1
        Days:

    BoxLayout:
    	Meals:
    		id: meals

    BoxLayout:
    	size_hint: 1, .1
    	GetRouteButton:
    		meals: meals
    		text: 'Get Grocery Store Route'
    		on_press: self.getGroceryRoute(meals.meal_list)

        			

        

    
