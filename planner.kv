#:kivy 1.10.0

<Planner>:    
    canvas:
    	Color:
    		rgba: 0.8, 0.8, 0.8, 1
    	Rectangle:
    		pos: self.pos
    		size: self.size

    orientation: 'vertical'

    BoxLayout:
        size_hint: 1, .1
        Days:

    BoxLayout:
        size_hint: 1, .1

        ShoppingArea:
            id: shopping_dropdown
            on_text: self.map_file = self.text_to_file[self.text];

    Meals:
    	id: meals

    BoxLayout:
    	size_hint: 1, .1

    	GetRouteButton:
    		meals: meals
    		shopping_area: shopping_dropdown
    		text: 'Get Grocery Store Route'
    		on_press: self.getGroceryRoute(meals.meal_list, shopping_dropdown.map_file)

    	SaveButton:
    		meals: meals
            text: 'Save'
    		on_press: self.save(meals.meal_list, 'saved_meals.txt')

        LoadButton:
            meals: meals
            text: 'Load'
            on_press: self.load(meals.meal_list, 'saved_meals.txt')

    ScrollView:
        size_hint: 1, .3
        bar_width: 5
    
        Recipes:
            size_hint_y: None
            height: self.minimum_height

        			

        

    
